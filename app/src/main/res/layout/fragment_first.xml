<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:id="@+id/Fragment">

    <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/Regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp"
            android:layout_centerHorizontal="true"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@id/Regis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Username"
        android:paddingLeft="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Email"
            />
        <EditText
            android:id="@+id/phone"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Phone"
            android:inputType="number"
            />

    <EditText
        android:id="@+id/password"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_below="@id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp" />

    <CheckBox
        android:id="@+id/Checks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="90dp"
        android:text="By checking the box you agree tu our"
        android:textColorLink="@color/highlight"
        android:textSize="8sp" />
        <TextView
        android:id="@+id/Terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Checks"
        android:layout_below="@id/password"
        android:layout_marginTop="359dp"
        android:layout_marginLeft="253dp"
        android:text="Terms and Conditions."
        android:textColor="@color/highlight"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnRegis"
        android:layout_width="362dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/highlight"
        android:text="Register"
        android:layout_below="@id/Checks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRegis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="20dp"
        android:text="Alredy Have an Account?"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/LogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Already"
        android:layout_below="@id/btnRegis"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="240dp"
        android:layout_marginRight="20dp"
        android:text="Log In"
        android:textColor="@color/highlight"
        android:textSize="8sp" />

</FrameLayout>